.wrapper
  .main-chat
    .main-chat__group-info
      .info-block
        .info-block__group-name
          = @group.name
        .info-block__member-name
          Member : 
          - @group.users.each do |user|  
            = user.name
      = link_to edit_group_path(@group), class: "edit-btn" do
        Edit
    .main-chat__message-list
      = render @messages
    .main-chat__message-form
      = form_for [@group, @message] do |f|
        .form-box
          .form
            .text-box
              = f.text_field :body, class: 'message-form', placeholder: 'type a message'
              = f.label :image, class: 'photo-icon' do
                %i.far.fa-image
                = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'send-btn'