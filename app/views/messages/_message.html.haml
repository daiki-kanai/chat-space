.message-block{data: {message: {id: message.id}}}
  .message-data
    .message-data__messenger
      = message.user.name
    .message-data__data-and-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message
    - if message.body.present?
      %p.message__content
        = message.body
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?